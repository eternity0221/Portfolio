{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@public/*": ["./public/*"],
      "@app/*": ["./src/*"],
      "@api/*": ["./src/app/api/*"],

      "@atoms/*": ["./src/components/atoms/*"],
      "@molecules/*": ["./src/components/molecules/*"],
      "@organisms/*": ["./src/components/organisms/*"],
      "@templates/*": ["./src/components/templates/*"],
      "@widgets/*": ["./src/components/widgets/*"],

      "@consts/*": ["./src/entities/consts/*"],
      "@lib/*": ["./src/entities/lib/*"],
      "@interfaces/*": ["./src/entities/interfaces/*"],
      "@types/*": ["./src/entities/types/*"],

      "@context/*": ["./src/process/context/*"],
      "@hooks/*": ["./src/process/hooks/*"],
      "@providers/*": ["./src/process/providers/*"],
      "@services/*": ["./src/process/services/*"],
      "@store/*": ["./src/process/store/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
